<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>

<div>
  <%= image_tag @book.get_image %>
  <p>Book detail<%= @book.shop_name %></p>
  <p>説明：<%= @book.caption %></p>
  <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <p>投稿日：<%= @book.created_at.strftime('%Y/%m/%d') %></p>

  <% if @book.user == current_user %>
    <%= link_to "削除", book_path(@book), method: :delete %>
  <% end %>
</div>
