<main>
  <%= flash[:notice] %>
  <p id = "notice"></p>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <%= render 'books/list', user: @user, book: @book_new %>

      <div class = "col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class = "table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
                <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
                <P><%= @user.name %></P>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book) do %>
                <p><%= @book.title %></p>
                <% end %>
              </td>
              <td>
                <p><%= @book.body %></p>
              </td>
              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success btn-text-light" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger btn-text-light", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>