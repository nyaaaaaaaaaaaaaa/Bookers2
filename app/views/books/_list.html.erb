<div class = "col-md-3">
    <h2>User info</h2>
    <p><%= image_tag user.get_profile_image(100,100) %></p>
      <table class = "table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
        </tbody>
      </table>
      <div class = "row">
        <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class = "mt-3">New book</h2>
      <%= form_with model: book, url: '/books', method: :post do |f| %>
      <form class="new_book" id="new_book" action="/books" accept-charset="UTF-8" method="post">
        <div class="field">
          <label for="book_title">Title</label>
     ã€€    </br> <%= f.text_field :title %>
        </div>
        <div class="field">
          <label for="book_body">Opinion</label>
          </br><%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit 'Create Book', class:"btn btn-sm btn-success btn-text-light" %>
        </div>
      <% end %>
  </div>