<main>

  <p id = "notice"></p>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-md-3">
        <h2>User info</h2>
        <!-- 画像表示 -->
        <table class = "table">
          <tbody>
            <tr>
              <th>name</th>
              <th></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class = "row">
          <a class = "btn btn-outline-secondary btn-block edit_user_id" href = "/users/:id/edit">
            <i class="fa-solid fa-user-gear"></i>
          </a>
        </div>
        <h2 class = "mt-3">New book</h2>
        <form action = "/books" accept-charset = "UTF-8" method = "post">
          <div class = "form-group">
            <label for = "book_title">Title</label>
            <input class = "form-control book_title" type = "text" name = "book[title]" id = "book_title">
          </div>
          <div class = "form-group">
            <label for = "book_opinion">Opinion</label>
            <textarea class = "form-control book_body" name = "book[body]" id = "book_body"></textarea>
          </div>
          <div class = "form-group">
            <input type = "submit" name = "commit" value = "Create Book" class = "btn btn-success" date-disable-with = "Create book">
          </div>
        </form>
      </div>
    </div>
  </div>

</main>





<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>